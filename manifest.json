{
  "manifest_version": 3,
  "name": "YouTube AI Focus Agent",
  "version": "2.0.0",
  "description": "Hide distracting YouTube videos using keywords and AI.",
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://api.groq.com/*",
    "https://openrouter.ai/*",
    "https://generativelanguage.googleapis.com/*",
    "https://api-inference.huggingface.co/*",
    "https://api.mistral.ai/*",
    "https://api.cloudflare.com/*"
  ],
  "action": {
    "default_popup": "popupUI.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon/newicon.png"
  }
}